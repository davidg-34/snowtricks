{% extends 'base.html.twig' %}

{% block title %}Administration{% endblock %}
{% block body %}
    {# {% include "home/show.html.twig" %} #}
    <div class="container my-5">
        <div class="container col-6">
            {{ form_start(formTrick) }}
            {{ form_errors(formTrick) }}

            {{ form_row(formTrick.name) }}
            {{ form_row(formTrick.description) }}
            {# {{ form_row(formTrick.category) }} #}
            {{ form_row(formTrick.medias) }}
            
            {# <button type="submit" class="m-3">valider</button> #}
            <button type="submit" class="m-3">
                {% if trick is same as(trick.id) %}
                    Valider
                {% else %}
                    Modifier
                {% endif %}
            </button>
            <button type="submit" class="m-3" style="background-color: red;color: aliceblue;">supprimer</button>
            {{ form_end(formTrick) }}
        </div>
    </div>
{% endblock %}
