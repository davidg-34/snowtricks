{% extends 'base.html.twig' %}

{% block title %}Snowtricks
{% endblock %}

{% block body %}

    <header {# id="hero" #}>
        <div class="hero">
            <h4 class="citation text-center">Partager vos figures sur le site communautaire de snowtricks !</h4>
            {# Flèche du bas #}
            <div class="arrow arrow-down">
                <a href="#tricks">
                    <i class="fas fa-arrow-down"></i>
                </a>
            </div>
        </div>
    </header>

    {# Liste des figures #}
    <section id="tricks">
        <div class="container p-3">
            <div class="row" id="tricks_container">
                {% include "trick/tricks.html.twig" %}
            </div>
        </div>
        {# Bouton 'load more' #}
        <div class="container">
            <a href="" class="d-grid gap-2 col-2 mx-auto" id="load-more">
                <button class="text-center bg-primary" onclick="loadMore(); return false">
                    Load More
                    <!--<i class="fas fa-spinner"></i>-->
                </button>
                <input type="hidden" id="loadMore" name="loadMore" value="0">
            </a>
        </div>
        {# Flèche du haut #}
        <div class="arrow">
            <a href="#">
                <i class="fas fa-arrow-up"></i>
            </a>
        </div>
    </section>
{% endblock %}
