{% extends 'base.html.twig' %}

{% block title %}Snowtricks{% endblock %}

{% block body %}

    <header {# id="hero" #}>
        <div class="hero">
            <h4 class="citation text-center">Partager vos figures sur le site communautaire de snowtricks !</h4>            
                <div class="arrow arrow-down">
                    <a href="#tricks">
                        <i class="fas fa-arrow-down"></i>
                    </a>
                </div>
        </div>
    </header>

    <section id="tricks">
        <div class="container p-3">
            <div class="row">
                {% for trick in tricks %}
                    <article class="col-lg-4 col-md-6 col-sm-6">
                        <div class="card my-2">
                            <div class="card-body">
                                <img class="card-img" src="/{{ trick.medias.picture }}" alt="img_trick">
                            </div>
                            <div class="row">
                                <div class="col-6">
                                    <a href="/tricks/{{ trick.id }}"><p class="w-100 mx-4">{{ trick.name}}</p></a>
                                </div>
                                <div class="col-6 ">
                                    <div class="row">
                                        <div class="col-6">
                                            <a href="/tricks/{{ trick.id }}/edit"><i class="fas fa-pen"></i></a>
                                        </div>
                                        <div class="col-6">
                                            <a href=""><i class="fas fa-trash-alt"></i></a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </article>
                {% endfor %}
            </div>
        </div>
        <div class="arrow">
            <a href="#">
                <i class="fas fa-arrow-up"></i>
            </a>
        </div>
    </section>
{% endblock %}
