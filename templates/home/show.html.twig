                                    </div>
                                </div>
                                <div class="col-4 text-center">
                                <button type="submit" class="btn btn-secondary w-100">Envoyer</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div> #}


        <h5 class="ms-5 mb-5">Commentaires :
            {{ trick.comments|length }}</h5>
        {% for comment in trick.comments(currentPage) %}
            <div class="comment">
                <div class="row">
                    <div class="col">
                        <img class="mb-4 mx-5" src="https://ui-avatars.com/api/?rounded=true&background=random&name={{ comment.user.username|default('undefined') }}" width="40px">
                        <strong>{{ comment.user.username|default('') }}</strong>
                        <span class="ps-2">Le
                            {{comment.createdAt | date('d/m/y à H:i')}}</span>
                    </div>
                </div>
                <div class="col mb-4 ms-5">
                    {{ comment.content | raw }}
                </div>
            </div>
        {% endfor %}

        <nav aria-label="Page navigation example w-100">
            <ul class="pagination justify-content-center">
                <li class="page-item">
                    {% if (currentPage > 1) %}                    
                        <a class="page-link" href="{{ path ('app_show', {slug: trick.slug, page: currentPage - 1}) }}">Précédent</a>
                    {% else %}
                        <span class="page-link disabled">Précédent</span>
                    {% endif %}
                </li>
                <li class="page-item">
                    <a class="page-link" href="{{ path('app_show', {slug: trick.slug, page: 1}) }}">1</a>
                </li>
                <li class="page-item">
                    <a class="page-link active" href="{{ path('app_show', {slug: trick.slug, page: 2}) }}">2</a>
                </li>
                <li class="page-item">
                    <a class="page-link" href="{{ path('app_show', {slug: trick.slug, page: 3}) }}">3</a>
                </li>
                <li class="page-item">
                    <a class="page-link" href="{{ path ('app_show', {slug: trick.slug, page: currentPage + 1}) }}">Suivant</a>
                </li>
            </ul>
        </nav>
        {# <nav aria-label="pagination">
                    <ul class="pagination">
                        <li>
                            <a href="{{ path ({slug: slug, page: currentPage - 1}) }}">
                                <span aria-hidden="true">«</span>
