{% extends 'base.html.twig' %}

{% block title %}Détail figure
{% endblock %}

{% block body %}

    <div
        class="container border border-secondary col col-lg-8 p-0" style="box-shadow: 0px 2px 5px 0px #000;">

        {# image de la figure page détail #}
        <div class="container p-0 position-relative">
            <img class="card-img" src="/{{ trick.medias.picture }}" alt="img_trick">
            <p class="buttons border border-light position-absolute" style="top: 1%; right: 1%;">
                <a href="/tricks/{{ trick.slug }}/edit">
                    <i class="text-light px-2 fas fa-pen"></i>
                </a>
                <a href="">
                    <i class="text-light px-2 fas fa-trash-alt"></i>
                </a>
            </p>
        </div>

        {# liste des images et videos #}
        <div
            class="container">
            {# {% for trick in tricks %} #}
            <article class="col-lg-2 col-md-4">
                <div class="card my-2">
                    <div class="card-body">
                        <img class="card-img" src="/{{ trick.medias.picture }}" alt="img_trick">
                    </div>
                    <div class="row">
                        <div class="col">
                            <p class="text-center">{{ trick.name}}</p>
                        </div>
                    </div>
                </div>
            </article>
            {# {% endfor %} #}
        </div>

        {# description de la figure #}
        <div class="container col-lg-12  text-center my-5 px-5">
            {{ trick.description }}
        </div>

        {# informations sur la figure #}
        <div class="container container-fluid col-lg-12 my-5 text-center">
            <button class="btn btn-secondary disabled my-2">Créé le :
                {# {{trick.comments.created_at}} #}
            </button>
            <button class="btn btn-secondary disabled my-2">Groupe :
                {{trick.category.name}}
            </button>
            <button class="btn btn-secondary disabled my-2">Modifié le :
                {# {{trick.comments.}} #}
            </button>
            <button class="btn btn-secondary disabled my-2">Auteur :
                {# {{trick.users.roles}} #}
            </button>
        </div>

        {# commentaire #}
        {# <div class="container container-fluid col-lg-8 border-top">        
                    <div class="col-6 
                        <form class="form-inline methode=" post"">        
