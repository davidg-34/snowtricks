{% extends 'base.html.twig' %}

{% block title %}Détail figure
{% endblock %}

{% block body %}

	<div
		class="container border border-secondary col col-lg-8 p-0" style="box-shadow: 0px 2px 5px 0px #000;">

		{# image de la figure page détail #}
		<div class="container p-0 position-relative">
			<img class="card-img" src="/{{ trick.medias.picture }}" alt="img_trick">
			<p class="buttons border border-light position-absolute" style="top: 1%; right: 1%;">
				<a href="/tricks/{{ trick.id }}/edit">
					<i class="text-light px-2 fas fa-pen"></i>
				</a>
				<a href="">
					<i class="text-light px-2 fas fa-trash-alt"></i>
				</a>
			</p>
		</div>

		{# liste des images et videos #}
		<div
			class="container">
			{# {% for trick in tricks %} #}
			<article class="col-lg-2 col-md-4">
				<div class="card my-2">
					<div class="card-body">
						<img class="card-img" src="/{{ trick.medias.picture }}" alt="img_trick">
					</div>
					<div class="row">
						<div class="col">
							<p class="text-center">{{ trick.name}}</p>
						</div>
					</div>
				</div>
			</article>
			{# {% endfor %} #}
		</div>

		{# description de la figure #}
		<div class="container col-lg-12  text-center my-5 px-5">
			{{ trick.description }}
		</div>

		{# informations sur la figure #}
		<div class="container container-fluid col-lg-12 my-5 text-center">
			<button class="btn btn-secondary disabled my-2">Créé le :
				{# {{trick.comments.created_at}} #}
			</button>
			<button class="btn btn-secondary disabled my-2">Groupe :
				{{trick.category.name}}
			</button>
			<button class="btn btn-secondary disabled my-2">Modifié le :
				{# {{trick.comments.}} #}
			</button>
			<button class="btn btn-secondary disabled my-2">Auteur :
				{# {{trick.users.roles}} #}
			</button>
		</div>

		{# commentaire #}
		{# <div class="container container-fluid col-lg-8 border-top">
																		            <div class="col-6 m-auto">
																		                <form class="form-inline methode=" post"">
																		                    <div class="row align-items-end">
																		                        <div class="col-8">
																		                            <div class="form-group">
																		                                <label for="exampleFormControlTextarea1"></label>
																		                                <textarea class="form-control" id="comment" rows="1"></textarea>
																		                            </div>
																		                        </div>
																		                        <div class="col-4 text-center">
																		                            <button type="submit" class="btn btn-secondary w-100">Envoyer</button>
																		                        </div>
																		                    </div>
																		                </form>
																		            </div>
																		        </div> #}


		<h5 class="ms-5 mb-5">Commentaires :
			{{ trick.comments|length }}</h5>
		{% for comment in trick.comments(currentPage) %}
			<div class="comment">
				<div class="row">
					<div class="col">
						<img class="mb-4 mx-5" src="https://ui-avatars.com/api/?rounded=true&background=random&name={{ comment.user.username|default('undefined') }}" width="40px">
						<strong>{{ comment.user.username|default('') }}</strong>
						<span class="ps-2">Le
							{{comment.createdAt | date('d/m/y à H:i')}}</span>
					</div>
				</div>
				<div class="col mb-4 ms-5">
					{{ comment.content | raw }}
				</div>
			</div>
		{% endfor %}
		<nav aria-label="pagination">
			<ul class="pagination">
				<li>
					<a href="{# {{ path ({slug: slug, page: currentPage - 1}) }} #}">
						<span aria-hidden="true">«</span>
						<span class="visuallyhidden">précédent</span>
					</a>
				</li>
				<li>
					<a href="{# {{ path(path, {slug: slug, page: page}) }} #}">
						<span class="visuallyhidden">page
						</span>1</a>
				</li>
				<li>
					<a href="" aria-current="page">
						<span class="visuallyhidden">page
						</span>2</a>
				</li>
				<li>
					<a href="{# {{ path ({slug: slug, page: currentPage + 1}) }} #}">
						<span class="visuallyhidden">suivant</span>
						<span aria-hidden="true">»</span>
					</a>
				</li>
			</ul>
		</nav>


		<div class="container row mx-auto">
			{% if app.user %}
				{{ form_start(commentForm) }}
				<div class="row justify-content-center">
					<div class="col-3" {# style="width: 60%" #}>
						{{ form_row(commentForm.content, {'attr': {'placeholder': "Votre commentaire"}}) }}
					</div>
					<div class="col-3" {# style="width: 30%" #}>
						<button type="submit" class="btn btn-secondary mb-2 p-3 w-100">Laissez un commentaire</button>
					</div>
				</div>
				{{ form_end(commentForm) }}
			{% else %}
				<h5>Vous ne pouvez-pas commenter si vous n'êtes pas connecté !</h5>
			{% endif %}
		</div>

		{# Affichage des commentaires #}
		{# <div class="container col-lg-8 my-5 border-top">
